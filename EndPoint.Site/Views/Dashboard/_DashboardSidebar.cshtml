@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<div class="dashboard-sidebar">
    <div class="user-profile-card">
        <div class="user-avatar">
            <img src="~/SiteTemplate/assets/images/man.png" alt="پروفایل کاربر">
        </div>
        <div class="user-info">
            <h4>@User.Identity.Name</h4>
            <p>عضو فروشگاه دیجی اسمارت</p>
        </div>
    </div>

    <nav class="dashboard-nav">
        <ul>
            <li class="nav-item @(currentAction == "Index" ? "active" : "")">
                <a href="/Dashboard" class="nav-link">
                    <i class="mdi mdi-view-dashboard"></i>
                    داشبورد
                </a>
            </li>
            <li class="nav-item @(currentAction == "Orders" ? "active" : "")">
                <a href="/Dashboard/Orders" class="nav-link">
                    <i class="mdi mdi-cart"></i>
                    سفارشات من
                </a>
            </li>
            <li class="nav-item @(currentAction == "Profile" ? "active" : "")">
                <a href="/Dashboard/Profile" class="nav-link">
                    <i class="mdi mdi-account"></i>
                    پروفایل کاربری
                </a>
            </li>
            <li class="nav-item">
                <a href="/authentication/SignOut" class="nav-link">
                    <i class="mdi mdi-logout"></i>
                    خروج
                </a>
            </li>
        </ul>
    </nav>
</div>