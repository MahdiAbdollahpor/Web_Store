@using Web_Store.Application.Services.Products.Commands.EditProduct
@using Web_Store.Application.Services.Products.Queries.GetProductDetailForAdmin
@model RequestEditProductDto
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">ویرایش محصول</h3>
            </div>
            <div class="card-body">
                <form id="editProductForm" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <!-- ستون سمت چپ -->
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">نام محصول *</label>
                                <input asp-for="Name" class="form-control" placeholder="نام محصول را وارد کنید" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand" class="form-label">برند *</label>
                                <input asp-for="Brand" class="form-control" placeholder="برند محصول را وارد کنید" />
                                <span asp-validation-for="Brand" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId" class="form-label">دسته‌بندی *</label>
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                    <option value="">انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Price" class="form-label">قیمت (تومان) *</label>
                                        <input asp-for="Price" type="number" class="form-control" placeholder="قیمت محصول" />
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Inventory" class="form-label">موجودی *</label>
                                        <input asp-for="Inventory" type="number" class="form-control" placeholder="تعداد موجودی" />
                                        <span asp-validation-for="Inventory" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ستون سمت راست -->
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label">توضیحات محصول</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات کامل محصول را وارد کنید"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="Displayed" class="form-check-input" />
                                    <label class="form-check-label" asp-for="Displayed">نمایش محصول در سایت</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">تصاویر محصول</label>
                                <div class="custom-file">
                                    <input type="file" name="Images" multiple class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">انتخاب تصاویر</label>
                                </div>
                                <small class="form-text text-muted">حداکثر حجم هر تصویر 2 مگابایت</small>

                                <!-- نمایش تصاویر فعلی -->
                                @if (ViewBag.CurrentImages != null && ((List<ProductDetailImagesDto>)ViewBag.CurrentImages).Any())
                                {
                                    <div id="currentImages" class="mt-3">
                                        <label class="form-label">تصاویر فعلی:</label>
                                        <div class="row">
                                            @foreach (var image in (List<ProductDetailImagesDto>)ViewBag.CurrentImages)
                                            {
                                                <div class="col-6 col-sm-4 col-md-3 mb-2">
                                                    <div class="image-thumbnail text-center">
                                                        <img src="~/@image.Src" alt="تصویر محصول" class="img-fluid rounded" style="height: 80px; object-fit: cover;" />
                                                        <div class="image-name small text-truncate mt-1">@System.IO.Path.GetFileName(image.Src)</div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- بخش ویژگی‌ها -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="form-group">
                                <label class="form-label">ویژگی‌های محصول</label>
                                <button type="button" id="addFeature" class="btn btn-sm btn-success mb-2">
                                    <i class="fa fa-plus"></i> افزودن ویژگی جدید
                                </button>

                                <div id="featuresContainer" class="border rounded p-3 bg-light">
                                    @if (Model.Features != null && Model.Features.Any())
                                    {
                                        for (int i = 0; i < Model.Features.Count; i++)
                                        {
                                            <div class="feature-item row mb-2 align-items-center">
                                                <div class="col-12 col-md-5 mb-2 mb-md-0">
                                                    <input type="text" name="Features[@i].DisplayName"
                                                           value="@Model.Features[i].DisplayName"
                                                           class="form-control form-control-sm" placeholder="نام ویژگی" />
                                                </div>
                                                <div class="col-12 col-md-5 mb-2 mb-md-0">
                                                    <input type="text" name="Features[@i].Value"
                                                           value="@Model.Features[i].Value"
                                                           class="form-control form-control-sm" placeholder="مقدار ویژگی" />
                                                </div>
                                                <div class="col-12 col-md-2 text-center text-md-start">
                                                    <button type="button" class="btn btn-sm btn-danger remove-feature w-100 w-md-auto">
                                                        <i class="fa fa-trash"></i>
                                                        <span class="d-none d-md-inline">حذف</span>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-info text-center mb-0">
                                            هیچ ویژگی تعریف نشده است. می‌توانید ویژگی‌های جدید اضافه کنید.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- دکمه‌های اقدام -->
                    <div class="form-group mt-4">
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="fa fa-save"></i> ذخیره تغییرات
                            </button>
                            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary flex-fill">
                                <i class="fa fa-arrow-right"></i> بازگشت به لیست
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let featureIndex = @(Model.Features?.Count ?? 0);

            // نمایش نام فایل‌های انتخاب شده
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                if (this.files && this.files.length > 1) {
                    fileName = this.files.length + ' فایل انتخاب شده';
                }
                $(this).next('.custom-file-label').html(fileName);
            });

            // افزودن ویژگی جدید
            $('#addFeature').click(function () {
                const featureHtml = `
                                    <div class="feature-item row mb-2 align-items-center">
                                        <div class="col-md-5">
                                            <input type="text" name="Features[${featureIndex}].DisplayName"
                                                   class="form-control" placeholder="نام ویژگی" />
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" name="Features[${featureIndex}].Value"
                                                   class="form-control" placeholder="مقدار ویژگی" />
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-sm btn-danger remove-feature">
                                                <i class="fa fa-trash"></i> حذف
                                            </button>
                                        </div>
                                    </div>`;

                $('#featuresContainer .alert').remove();
                $('#featuresContainer').append(featureHtml);
                featureIndex++;
            });

            // حذف ویژگی
            $(document).on('click', '.remove-feature', function () {
                $(this).closest('.feature-item').remove();
                reindexFeatures();
            });

            function reindexFeatures() {
                $('.feature-item').each(function (index) {
                    $(this).find('input').each(function () {
                        const name = $(this).attr('name');
                        if (name && name.includes('Features[')) {
                            $(this).attr('name', name.replace(/Features\[\d+\]/, `Features[${index}]`));
                        }
                    });
                });
                featureIndex = $('.feature-item').length;

                if (featureIndex === 0) {
                    $('#featuresContainer').html('<div class="alert alert-info">هیچ ویژگی تعریف نشده است. می‌توانید ویژگی‌های جدید اضافه کنید.</div>');
                }
            }

            // ارسال فرم با AJAX - اصلاح مهم
            $('#editProductForm').submit(function (e) {
                e.preventDefault();

                // اعتبارسنجی
                const name = $('#Name').val();
                const brand = $('#Brand').val();
                const categoryId = $('#CategoryId').val();
                const price = $('#Price').val();
                const inventory = $('#Inventory').val();

                if (!name || !brand || !categoryId || !price || !inventory) {
                    Swal.fire({
                        icon: 'error',
                        title: 'خطا',
                        text: 'لطفا فیلدهای الزامی (علامت دار) را پر کنید'
                    });
                    return;
                }

                var formData = new FormData(this);

                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> در حال ذخیره...');

                // اصلاح URL - اضافه کردن Area
                $.ajax({
                    url: '/Admin/Products/EditProduct', // مسیر کامل با Area
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (result) {
                        submitBtn.prop('disabled', false).html(originalText);

                        if (result.isSuccess) {
                            Swal.fire({
                                icon: 'success',
                                title: 'موفق',
                                text: result.message,
                                confirmButtonText: 'باشه',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                // ریدایرکت به صفحه لیست محصولات
                                window.location.href = '@Url.Action("", "Products", new { Area = "Admin" })';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'خطا',
                                text: result.message
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        submitBtn.prop('disabled', false).html(originalText);
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'خطا',
                            text: 'خطا در ارتباط با سرور: ' + error
                        });
                    }
                });
            });
        });
    </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        @@media (max-width: 768px) {
            .card-body {
                padding: 1rem;
            }

            .form-group {
                margin-bottom: 1.5rem;
            }

            .form-control, .form-control-sm {
                font-size: 16px; /* جلوگیری از زوم در iOS */
            }

            .feature-item {
                padding: 0.75rem;
                border: 1px solid #dee2e6;
                border-radius: 0.25rem;
                margin-bottom: 0.75rem;
            }

            .image-thumbnail {
                border: 1px solid #ddd;
                border-radius: 0.25rem;
                padding: 0.5rem;
            }

            .btn {
                padding: 0.75rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .card-header {
                padding: 0.75rem;
            }

            .card-title {
                font-size: 1.1rem;
            }

            .form-label {
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .custom-file-label::after {
                content: "انتخاب";
            }

            .alert {
                font-size: 0.9rem;
                padding: 0.75rem;
            }
        }

        @@media (max-width: 400px) {
            .card-body {
                padding: 0.75rem;
            }

            .form-group {
                margin-bottom: 1rem;
            }

            .btn {
                padding: 0.5rem;
                font-size: 0.9rem;
            }

            .feature-item {
                padding: 0.5rem;
            }
        }
    </style>
}