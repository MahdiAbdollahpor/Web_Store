@using Web_Store.Application.Services.Products.Commands.EditProduct
@using Web_Store.Application.Services.Products.Queries.GetProductDetailForAdmin
@model RequestEditProductDto
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">ویرایش محصول</h3>
            </div>
            <div class="card-body">
                <!-- تغییر مهم: حذف asp-action و اضافه کردن id برای فرم -->
                <form id="editProductForm" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name">نام محصول *</label>
                                <input asp-for="Name" class="form-control" placeholder="نام محصول را وارد کنید" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند *</label>
                                <input asp-for="Brand" class="form-control" placeholder="برند محصول را وارد کنید" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId">دسته‌بندی *</label>
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                    <option value="">انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت (تومان) *</label>
                                <input asp-for="Price" type="number" class="form-control" placeholder="قیمت محصول را وارد کنید" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Inventory">موجودی *</label>
                                <input asp-for="Inventory" type="number" class="form-control" placeholder="تعداد موجودی را وارد کنید" />
                                <span asp-validation-for="Inventory" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description">توضیحات محصول</label>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="توضیحات کامل محصول را وارد کنید"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <!-- اصلاح چک باکس -->
                                <input asp-for="Displayed" class="form-check-input" />
                                <label class="form-check-label" asp-for="Displayed">نمایش محصول در سایت</label>
                            </div>

                            <div class="form-group">
                                <label>تصاویر محصول</label>
                                <div class="custom-file">
                                    <input type="file" name="Images" multiple class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">انتخاب تصاویر</label>
                                </div>
                                <small class="form-text text-muted">حداکثر حجم هر تصویر 2 مگابایت - تصاویر جدید جایگزین تصاویر قبلی خواهند شد</small>

                                <!-- نمایش تصاویر فعلی -->
                                @if (ViewBag.CurrentImages != null && ((List<ProductDetailImagesDto>)ViewBag.CurrentImages).Any())
                                {
                                    <div id="currentImages" class="mt-2">
                                        <label>تصاویر فعلی:</label>
                                        <div class="d-flex flex-wrap">
                                            @foreach (var image in (List<ProductDetailImagesDto>)ViewBag.CurrentImages)
                                            {
                                                <div class="image-thumbnail m-1">
                                                    <img src="~/@image.Src" alt="تصویر محصول" style="width: 80px; height: 80px; object-fit: cover;" />
                                                    <div class="image-name">@System.IO.Path.GetFileName(image.Src)</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>ویژگی‌های محصول</label>
                                <button type="button" id="addFeature" class="btn btn-sm btn-success mb-2">
                                    <i class="fa fa-plus"></i> افزودن ویژگی جدید
                                </button>

                                <div id="featuresContainer">
                                    @if (Model.Features != null && Model.Features.Any())
                                    {
                                        for (int i = 0; i < Model.Features.Count; i++)
                                        {
                                            <div class="feature-item row mb-2 align-items-center">
                                                <div class="col-md-5">
                                                    <input type="text" name="Features[@i].DisplayName"
                                                           value="@Model.Features[i].DisplayName"
                                                           class="form-control" placeholder="نام ویژگی" />
                                                </div>
                                                <div class="col-md-5">
                                                    <input type="text" name="Features[@i].Value"
                                                           value="@Model.Features[i].Value"
                                                           class="form-control" placeholder="مقدار ویژگی" />
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="button" class="btn btn-sm btn-danger remove-feature">
                                                        <i class="fa fa-trash"></i> حذف
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            هیچ ویژگی تعریف نشده است. می‌توانید ویژگی‌های جدید اضافه کنید.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> ذخیره تغییرات
                        </button>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-right"></i> بازگشت به لیست
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let featureIndex = @(Model.Features?.Count ?? 0);

            // نمایش نام فایل‌های انتخاب شده
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                if (this.files && this.files.length > 1) {
                    fileName = this.files.length + ' فایل انتخاب شده';
                }
                $(this).next('.custom-file-label').html(fileName);
            });

            // افزودن ویژگی جدید
            $('#addFeature').click(function () {
                const featureHtml = `
                            <div class="feature-item row mb-2 align-items-center">
                                <div class="col-md-5">
                                    <input type="text" name="Features[${featureIndex}].DisplayName"
                                           class="form-control" placeholder="نام ویژگی" />
                                </div>
                                <div class="col-md-5">
                                    <input type="text" name="Features[${featureIndex}].Value"
                                           class="form-control" placeholder="مقدار ویژگی" />
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-sm btn-danger remove-feature">
                                        <i class="fa fa-trash"></i> حذف
                                    </button>
                                </div>
                            </div>`;

                $('#featuresContainer .alert').remove();
                $('#featuresContainer').append(featureHtml);
                featureIndex++;
            });

            // حذف ویژگی
            $(document).on('click', '.remove-feature', function () {
                $(this).closest('.feature-item').remove();
                reindexFeatures();
            });

            function reindexFeatures() {
                $('.feature-item').each(function (index) {
                    $(this).find('input').each(function () {
                        const name = $(this).attr('name');
                        if (name && name.includes('Features[')) {
                            $(this).attr('name', name.replace(/Features\[\d+\]/, `Features[${index}]`));
                        }
                    });
                });
                featureIndex = $('.feature-item').length;

                if (featureIndex === 0) {
                    $('#featuresContainer').html('<div class="alert alert-info">هیچ ویژگی تعریف نشده است. می‌توانید ویژگی‌های جدید اضافه کنید.</div>');
                }
            }

            // ارسال فرم با AJAX - اصلاح مهم
            $('#editProductForm').submit(function (e) {
                e.preventDefault();

                // اعتبارسنجی
                const name = $('#Name').val();
                const brand = $('#Brand').val();
                const categoryId = $('#CategoryId').val();
                const price = $('#Price').val();
                const inventory = $('#Inventory').val();

                if (!name || !brand || !categoryId || !price || !inventory) {
                    Swal.fire({
                        icon: 'error',
                        title: 'خطا',
                        text: 'لطفا فیلدهای الزامی (علامت دار) را پر کنید'
                    });
                    return;
                }

                var formData = new FormData(this);

                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> در حال ذخیره...');

                // اصلاح URL - اضافه کردن Area
                $.ajax({
                    url: '/Admin/Products/EditProduct', // مسیر کامل با Area
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (result) {
                        submitBtn.prop('disabled', false).html(originalText);

                        if (result.isSuccess) {
                            Swal.fire({
                                icon: 'success',
                                title: 'موفق',
                                text: result.message,
                                confirmButtonText: 'باشه',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                // ریدایرکت به صفحه لیست محصولات
                                window.location.href = '@Url.Action("", "Products", new { Area = "Admin" })';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'خطا',
                                text: result.message
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        submitBtn.prop('disabled', false).html(originalText);
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'خطا',
                            text: 'خطا در ارتباط با سرور: ' + error
                        });
                    }
                });
            });
        });
    </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .image-thumbnail {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            text-align: center;
            background: #f8f9fa;
        }

        .image-name {
            font-size: 10px;
            margin-top: 5px;
            word-break: break-all;
            max-width: 80px;
        }

        .feature-item {
            border: 1px solid #e9ecef;
            border-radius: 4px;
            padding: 10px;
            background: #f8f9fa;
        }
    </style>
}