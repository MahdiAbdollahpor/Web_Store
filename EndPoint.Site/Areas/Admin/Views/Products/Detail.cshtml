@using Web_Store.Application.Services.Products.Queries.GetProductDetailForAdmin
@model ProductDetailForAdmindto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <div class="card-title-wrap bar-warning">
                    <div class="card-title">اطلاعات محصول</div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-package font-small-3 ml-2"></i>
                                نام محصول
                            </h6>
                            <p class="mb-0 text-dark">@Model.Name</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-award font-small-3 ml-2"></i>
                                برند
                            </h6>
                            <p class="mb-0 text-dark">@Model.Brand</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-folder font-small-3 ml-2"></i>
                                دسته‌بندی
                            </h6>
                            <p class="mb-0 text-dark">@Model.Category</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-tag font-small-3 ml-2"></i>
                                قیمت
                            </h6>
                            <p class="mb-0 text-success font-weight-bold">@Model.Price.ToString("n0") تومان</p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-box font-small-3 ml-2"></i>
                                موجودی
                            </h6>
                            <p class="mb-0">
                                <span class="badge @(Model.Inventory > 0 ? "badge-success" : "badge-danger")">
                                    @Model.Inventory
                                </span>
                            </p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                        <div class="info-item border rounded p-3 h-100">
                            <h6 class="text-primary mb-2">
                                <i class="ft-eye font-small-3 ml-2"></i>
                                وضعیت نمایش
                            </h6>
                            <p class="mb-0">
                                @if (Model.Displayed)
                                {
                                    <span class="badge badge-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">غیرفعال</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <div class="info-item border rounded p-3">
                            <h6 class="text-primary mb-2">
                                <i class="ft-file-text font-small-3 ml-2"></i>
                                توضیحات
                            </h6>
                            <p class="mb-0 text-dark line-height-2">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-6 mb-4 mb-lg-0">
        <div class="card h-100">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <div class="card-title">ویژگی‌های محصول</div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ویژگی</th>
                                <th>مقدار</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Features)
                            {
                                <tr>
                                    <td class="font-weight-bold text-primary">@item.DisplayName</td>
                                    <td>@item.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                <div class="card-title-wrap bar-info">
                    <div class="card-title">تصاویر محصول</div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model.Images)
                    {
                        <div class="col-6 col-sm-4 col-md-3 mb-3">
                            <div class="image-container text-center">
                                <a target="_blank" href="~/@item.Src" class="d-block">
                                    <img class="img-thumbnail img-fluid rounded"
                                         src="~/@item.Src"
                                         alt="تصویر محصول"
                                         style="height: 120px; object-fit: cover; width: 100%;" />
                                </a>
                                <small class="text-muted d-block mt-1 text-truncate">
                                    @System.IO.Path.GetFileName(item.Src)
                                </small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        .info-item {
            margin-bottom: 1rem;
        }

        .card-body {
            padding: 1rem;
        }

        .image-container {
            margin-bottom: 1rem;
        }

        .table-responsive {
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 576px) {
        .card-header {
            padding: 0.75rem;
        }

        .card-title {
            font-size: 1.1rem;
        }

        .info-item {
            padding: 1rem;
        }

        .img-thumbnail {
            height: 100px !important;
        }
    }

    @@media (max-width: 400px) {
        .col-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .info-item {
            padding: 0.75rem;
        }

        .img-thumbnail {
            height: 80px !important;
        }
    }

    .info-item {
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .info-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>