@using Web_Store.Domain.Entities.HomePages
@model HomePageImages

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">ویرایش بنر</h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <form asp-controller="HomePageImages" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label class="form-label">تصویر فعلی</label>
                            <div class="text-center">
                                <img src="~/@Model.Src" alt="بنر فعلی" class="img-fluid img-thumbnail mx-auto d-block" style="max-width: 100%; height: auto; max-height: 200px;" />
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">تصویر جدید (در صورت عدم انتخاب، تصویر فعلی حفظ می‌شود)</label>
                            <input type="file" name="file" class="form-control" />
                            <small class="form-text text-muted">فرمت‌های مجاز: jpg, png, gif - حداکثر سایز: 5MB</small>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">لینک</label>
                            <input type="text" name="link" value="@Model.link" class="form-control" placeholder="https://example.com" />
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label">موقعیت نمایش</label>
                            <select name="imageLocation" class="form-control">
                                <option value="L1" selected="@(Model.ImageLocation == ImageLocation.L1)">اسلایدر ۱</option>
                                <option value="L2" selected="@(Model.ImageLocation == ImageLocation.L2)">اسلایدر ۲</option>
                                <option value="R1" selected="@(Model.ImageLocation == ImageLocation.R1)">بنر راست ۱</option>
                            </select>
                        </div>

                        <div class="form-group d-flex flex-column flex-md-row gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="ft-save"></i> ذخیره تغییرات
                            </button>
                            <a href="~/admin/homepageimages/" class="btn btn-secondary flex-fill">
                                <i class="ft-x"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        .card-body {
            padding: 1rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            font-size: 16px; /* جلوگیری از زوم در iOS */
        }
        
        .img-thumbnail {
            max-height: 150px !important;
        }
    }
    
    @@media (max-width: 576px) {
        .card-header {
            padding: 0.75rem;
        }
        
        .card-title {
            font-size: 1.1rem;
        }
        
        .btn {
            padding: 0.75rem;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .d-flex.flex-column .btn {
            width: 100%;
        }
    }
</style>