@using Web_Store.Domain.Entities.HomePages
@model HomePageImages

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">ویرایش بنر</h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <form  asp-controller="HomePageImages" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group">
                            <label>تصویر فعلی</label>
                            <div>
                                <img src="~/@Model.Src" alt="بنر فعلی" style="max-width: 300px; max-height: 150px;" class="img-thumbnail" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>تصویر جدید (در صورت عدم انتخاب، تصویر فعلی حفظ می‌شود)</label>
                            <input type="file" name="file" class="form-control" />
                            <small class="form-text text-muted">فرمت‌های مجاز: jpg, png, gif</small>
                        </div>

                        <div class="form-group">
                            <label>لینک</label>
                            <input type="text" name="link" value="@Model.link" class="form-control" placeholder="https://example.com" />
                        </div>

                        <div class="form-group">
                            <label>موقعیت نمایش</label>
                            <select name="imageLocation" class="form-control">
                                <option value="L1" selected="@(Model.ImageLocation == ImageLocation.L1)">اسلایدر ۱</option>
                                <option value="L2" selected="@(Model.ImageLocation == ImageLocation.L2)">اسلایدر ۲</option>
                                
                                <option value="R1" selected="@(Model.ImageLocation == ImageLocation.R1)">بنر راست ۱</option>
                               
                            </select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="ft-save"></i> ذخیره تغییرات
                            </button>
                            <a href="~/admin/homepageimages/" class="btn btn-secondary">
                                <i class="ft-x"></i> انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

