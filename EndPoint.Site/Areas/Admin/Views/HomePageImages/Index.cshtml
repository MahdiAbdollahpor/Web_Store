@using Web_Store.Domain.Entities.HomePages
@model List<HomePageImages>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">مدیریت بنرهای صفحه اصلی</h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <a href="~/admin/homepageimages/add" class="btn btn-success btn-sm">
                        <i class="ft-plus"></i> افزودن بنر جدید
                    </a>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-2">
                            <i class="ft-check"></i> @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="ft-alert-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>تصویر</th>
                                    <th>لینک</th>
                                    <th>موقعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <img src="~/@item.Src" alt="بنر" style="max-width: 150px; max-height: 80px;" class="img-thumbnail" />
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.link))
                                            {
                                                <a href="@item.link" target="_blank">@item.link</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون لینک</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (item.ImageLocation)
                                            {
                                                case ImageLocation.L1:
                                                    <span class="badge badge-primary">اسلایدر ۱</span>
                                                    break;
                                                case ImageLocation.L2:
                                                    <span class="badge badge-info">اسلایدر ۲</span>
                                                    break;
                                                
                                                case ImageLocation.R1:
                                                    <span class="badge badge-warning">بنر راست ۱</span>
                                                    break;
                                                
                                                default:
                                                    <span class="badge badge-secondary">@item.ImageLocation</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="~/admin/homepageimages/Edit/@item.Id"  class="btn btn-warning btn-sm">
                                                    <i class="ft-edit"></i> ویرایش
                                                </a>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm" 
                                                            onclick="return confirm('آیا از حذف این بنر مطمئن هستید؟')">
                                                        <i class="ft-trash"></i> حذف
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            هیچ بنری یافت نشد
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

