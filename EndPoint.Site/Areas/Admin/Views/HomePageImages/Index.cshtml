@using Web_Store.Domain.Entities.HomePages
@model List<HomePageImages>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <h4 class="card-title mb-2 mb-md-0">مدیریت بنرهای صفحه اصلی</h4>
                <div class="d-flex align-items-center">
                    <a class="heading-elements-toggle d-md-none"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <a href="~/admin/homepageimages/add" class="btn btn-success btn-sm">
                            <i class="ft-plus"></i> <span class="d-none d-md-inline">افزودن بنر جدید</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-2">
                            <i class="ft-check"></i> @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="ft-alert-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>تصویر</th>
                                    <th class="min-tablet">لینک</th>
                                    <th class="min-tablet">موقعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <img src="~/@item.Src" alt="بنر" class="img-fluid img-thumbnail" style="max-width: 150px; max-height: 80px;" />
                                        </td>
                                        <td class="min-tablet">
                                            @if (!string.IsNullOrEmpty(item.link))
                                            {
                                                <a href="@item.link" target="_blank" class="text-truncate d-inline-block" style="max-width: 200px;">@item.link</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون لینک</span>
                                            }
                                        </td>
                                        <td class="min-tablet">
                                            @switch (item.ImageLocation)
                                            {
                                                case ImageLocation.L1:
                                                    <span class="badge badge-primary">اسلایدر ۱</span>
                                                    break;
                                                case ImageLocation.L2:
                                                    <span class="badge badge-info">اسلایدر ۲</span>
                                                    break;
                                                
                                                case ImageLocation.R1:
                                                    <span class="badge badge-warning">بنر راست ۱</span>
                                                    break;
                                                
                                                default:
                                                    <span class="badge badge-secondary">@item.ImageLocation</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical btn-group-sm d-md-flex flex-md-row" role="group">
                                                <a href="~/admin/homepageimages/Edit/@item.Id" class="btn btn-warning btn-sm mb-1 mb-md-0 me-md-1">
                                                    <i class="ft-edit"></i> <span class="d-none d-md-inline">ویرایش</span>
                                                </a>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm" 
                                                            onclick="return confirm('آیا از حذف این بنر مطمئن هستید؟')">
                                                        <i class="ft-trash"></i> <span class="d-none d-md-inline">حذف</span>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            هیچ بنری یافت نشد
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    
    /* استایل‌های ریسپانسیو برای جدول */
    @@media (max-width: 768px) {
        .table-responsive table {
            width: 100%;
        }
        
        .min-tablet {
            display: none;
        }
        
        .btn-group-vertical {
            width: 100%;
        }
        
        .btn-group-vertical .btn {
            width: 100%;
            margin-bottom: 5px;
        }
    }
    
    @@media (max-width: 576px) {
        .card-header {
            padding: 1rem;
        }
        
        .card-title {
            font-size: 1.1rem;
        }
        
        .table td, .table th {
            padding: 0.5rem;
        }
        
        .img-thumbnail {
            max-width: 120px !important;
            max-height: 60px !important;
        }
    }
    
</style>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers