@using Web_Store.Application.Services.Orders.Queries.IGetOrderInvoiceServiceForAdmin
@model OrderInvoiceDto
@{
    ViewData["Title"] = "فاکتور سفارش";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <section id="configuration">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">فاکتور سفارش شماره @Model.OrderId</h4>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h6>اطلاعات سفارش:</h6>
                                    <p><strong>شماره سفارش:</strong> @Model.OrderId</p>
                                    <p><strong>تاریخ سفارش:</strong> @Model.OrderDate.ToString("yyyy/MM/dd HH:mm")</p>
                                    <p><strong>وضعیت:</strong> @Model.OrderState</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>اطلاعات مشتری:</h6>
                                    <p><strong>نام:</strong> @Model.UserFullName</p>
                                    <p><strong>ایمیل:</strong> @Model.UserEmail</p>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>نام محصول</th>
                                            <th>قیمت واحد</th>
                                            <th>تعداد</th>
                                            <th>جمع</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.Price.ToString("N0") تومان</td>
                                                <td>@item.Count</td>
                                                <td>@item.TotalPrice.ToString("N0") تومان</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-left"><strong>جمع کل:</strong></td>
                                            <td><strong>@Model.TotalAmount.ToString("N0") تومان</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <div class="mt-3">
                                <button onclick="window.print()" class="btn btn-primary">چاپ فاکتور</button>
                                <a href="~/admin/Orders/Index/" >بازگشت به لیست سفارشات</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>