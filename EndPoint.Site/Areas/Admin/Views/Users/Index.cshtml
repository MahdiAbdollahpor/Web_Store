@using Web_Store.Application.Services.Users.Queries.GetUsers
@model ReslutGetUserDto;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
    var currentSearchKey = Context.Request.Query["searchkey"];
}

<div class="content-wrapper">
    <div class="container-fluid">
        <section id="configuration">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                            <div class="card-title-wrap bar-success mb-2 mb-md-0">
                                <h4 class="card-title mb-0">لیست کاربران</h4>
                            </div>
                            <div class="d-none d-md-block">
                                <p class="card-text text-muted mb-0">لیست کاربران فروشگاه باگتو</p>
                            </div>
                        </div>
                        <div class="card-body collapse show">
                            <div class="card-block card-dashboard">
                                <div class="d-md-none mb-3">
                                    <p class="card-text text-muted">لیست کاربران فروشگاه باگتو</p>
                                </div>

                                <form method="get" class="row mb-3">
                                    <div class="col-12 col-md-8 col-lg-6">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="searchkey" value="@currentSearchKey" placeholder="جستجو بر اساس نام یا ایمیل...">
                                            <button class="btn btn-success">
                                                <i class="ft-search"></i>
                                                <span class="d-none d-md-inline">جستجو</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>نام</th>
                                                <th class="min-tablet">ایمیل</th>
                                                <th class="min-mobile">وضعیت</th>
                                                <th width="280">عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Users)
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="font-weight-bold">@item.FullName</span>
                                                    </td>
                                                    <td class="min-tablet">
                                                        <span class="text-muted">@item.Email</span>
                                                    </td>
                                                    <td class="min-mobile">
                                                        @if (item.IsActive)
                                                        {
                                                            <span class="badge badge-success">
                                                                <i class="fa fa-check d-none d-md-inline"></i> فعال
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">
                                                                <i class="fa fa-times d-none d-md-inline"></i> غیرفعال
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="btn-group-vertical btn-group-sm d-md-flex flex-md-row flex-wrap justify-content-center" role="group">
                                                            <button class="btn btn-info btn-sm mb-1 mb-md-0 me-md-1"
                                                                    onclick="ShowModalEdituser('@item.Id', '@item.FullName')"
                                                                    title="ویرایش کاربر">
                                                                <i class="fa fa-edit"></i>
                                                                <span class="d-none d-md-inline">ویرایش</span>
                                                            </button>
                                                            <button class="btn btn-danger btn-sm mb-1 mb-md-0 me-md-1"
                                                                    onclick="DeleteUser('@item.Id')"
                                                                    title="حذف کاربر">
                                                                <i class="fa fa-trash"></i>
                                                                <span class="d-none d-md-inline">حذف</span>
                                                            </button>
                                                            @if (item.IsActive)
                                                            {
                                                                <button class="btn btn-warning btn-sm"
                                                                        onclick="UserSatusChange('@item.Id')"
                                                                        title="غیرفعال کردن کاربر">
                                                                    <i class="fa fa-ban"></i>
                                                                    <span class="d-none d-md-inline">غیرفعال</span>
                                                                </button>
                                                            }
                                                            else
                                                            {
                                                                <button class="btn btn-success btn-sm"
                                                                        onclick="UserSatusChange('@item.Id')"
                                                                        title="فعال کردن کاربر">
                                                                    <i class="fa fa-check"></i>
                                                                    <span class="d-none d-md-inline">فعال کردن</span>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <!-- صفحه‌بندی -->
                                @if (Model.TotalPages > 1)
                                {
                                    <nav aria-label="Page navigation" class="mt-3">
                                        <ul class="pagination justify-content-center flex-wrap">
                                            <!-- دکمه قبلی -->
                                            @if (Model.CurrentPage > 1)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Content($"~/admin/users?page={Model.CurrentPage - 1}&searchkey={currentSearchKey}")">
                                                        <i class="ft-chevron-right"></i>
                                                        <span class="d-none d-md-inline">قبلی</span>
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">
                                                        <i class="ft-chevron-right"></i>
                                                        <span class="d-none d-md-inline">قبلی</span>
                                                    </span>
                                                </li>
                                            }

                                            <!-- صفحات -->
                                            @for (int i = 1; i <= Model.TotalPages; i++)
                                            {
                                                if (i == Model.CurrentPage)
                                                {
                                                    <li class="page-item active">
                                                        <span class="page-link">@i</span>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" href="@Url.Content($"~/admin/users?page={i}&searchkey={currentSearchKey}")">@i</a>
                                                    </li>
                                                }
                                            }

                                            <!-- دکمه بعدی -->
                                            @if (Model.CurrentPage < Model.TotalPages)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Content($"~/admin/users?page={Model.CurrentPage + 1}&searchkey={currentSearchKey}")">
                                                        <span class="d-none d-md-inline">بعدی</span>
                                                        <i class="ft-chevron-left"></i>
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">
                                                        <span class="d-none d-md-inline">بعدی</span>
                                                        <i class="ft-chevron-left"></i>
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </nav>
                                }

                                <!-- اطلاعات صفحه -->
                                <div class="text-center text-muted mt-2">
                                    نمایش
                                    <strong>@((Model.CurrentPage - 1) * Model.PageSize + 1)</strong>
                                    تا
                                    <strong>@((Model.CurrentPage - 1) * Model.PageSize + Model.Users.Count)</strong>
                                    از
                                    <strong>@Model.Rows</strong>
                                    مورد
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts
{
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>

    <script>
        // توابع JavaScript بدون تغییر
        function DeleteUser(UserId) {
            swal.fire({
                title: 'حذف کاربر',
                text: "کاربر گرامی از حذف کاربر مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#7cacbe',
                confirmButtonText: 'بله ، کاربر حذف شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var postData = {
                        'UserId': UserId,
                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "/Admin/Users/Delete",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
                }
            })
        }

        function UserSatusChange(UserId) {
            swal.fire({
                title: 'تغییر وضعیت کاربر',
                text: "کاربر گرامی از تغییر وضعیت کاربر مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#7cacbe',
                confirmButtonText: 'بله ، تغییر وضعیت انجام شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var postData = {
                        'UserId': UserId,
                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "/Admin/Users/UserSatusChange",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
                }
            })
        }

        function Edituser() {
            var userId = $("#Edit_UserId").val();
            var fullName = $("#Edit_Fullname").val();

            var postData = {
                'UserId': userId,
                'Fullname': fullName,
            };

            $.ajax({
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'json',
                type: "POST",
                url: "/Admin/Users/Edit",
                data: postData,
                success: function (data) {
                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            location.reload();
                        });
                    }
                    else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    alert(request.responseText);
                }
            });

            $('#EditUser').modal('hide');
        }

        function ShowModalEdituser(UserId, fullName) {
            $('#Edit_Fullname').val(fullName)
            $('#Edit_UserId').val(UserId)
            $('#EditUser').modal('show');
        }
    </script>
}

@section Modals
{
    <!-- Modal Edit User -->
    <div class="modal fade" id="EditUser" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel">ویرایش کاربر</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" id="Edit_UserId" />
                        <label for="Edit_Fullname" class="form-label">نام و نام خانوادگی</label>
                        <input type="text" class="form-control" id="Edit_Fullname" placeholder="نام کامل کاربر">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-primary" onclick="Edituser()">
                        <i class="fa fa-save"></i> اعمال تغییرات
                    </button>
                </div>
            </div>
        </div>
    </div>
}

