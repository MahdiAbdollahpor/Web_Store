@using Web_Store.Application.Services.Products.Queries.GetCategories
@model List<CategoriesDto>
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">


<div class="p-3 md:p-4 bg-white rounded-lg shadow-md">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4 md:mb-6">
        <div class="mb-4 md:mb-0">
            <h1 class="text-xl md:text-2xl font-bold text-gray-800">مدیریت دسته‌بندی‌ها</h1>
            @if (ViewBag.ParentId != null)
            {
                <p class="text-gray-600 mt-1 md:mt-2 text-sm md:text-base">
                    <span class="text-blue-600">@ViewBag.ParentCategoryName</span>
                    <span class="mx-1 md:mx-2">/</span>
                    <span>زیردسته‌ها</span>
                </p>
            }
        </div>
        <div>
            <a href="~/admin/categories/addnewcategory?parentId=@ViewBag.ParentId"
               class="bg-green-500 hover:bg-green-600 text-white px-3 py-2 md:px-4 md:py-2 rounded-lg flex items-center justify-center transition duration-200 text-sm md:text-base">
                <i class="fas fa-plus ml-1 md:ml-2"></i>
                افزودن دسته‌بندی جدید
            </a>
        </div>
    </div>

    <!-- Breadcrumb -->
    @if (ViewBag.ParentId != null)
    {
        <nav class="flex mb-4 md:mb-6" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                    <a href="~/admin/categories" class="inline-flex items-center text-xs md:text-sm font-medium text-gray-700 hover:text-blue-600">
                        <i class="fas fa-home ml-1 md:ml-2"></i>
                        دسته‌بندی اصلی
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <i class="fas fa-chevron-left text-gray-400 text-xs"></i>
                        <span class="mr-1 text-xs md:text-sm font-medium text-gray-500">@ViewBag.ParentCategoryName</span>
                    </div>
                </li>
            </ol>
        </nav>
    }

    <!-- Categories Table -->
    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-3 py-2 md:px-6 md:py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        نام دسته‌بندی
                    </th>
                    <th class="px-3 py-2 md:px-6 md:py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                        دسته‌بندی پدر
                    </th>
                    <th class="px-3 py-2 md:px-6 md:py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        عملیات
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 transition duration-150">
                        <td class="px-3 py-3 md:px-6 md:py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-8 w-8 md:h-10 md:w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-folder text-blue-600 text-sm md:text-base"></i>
                                </div>
                                <div class="mr-2 md:mr-4">
                                    <div class="text-sm font-medium text-gray-900">@item.Name</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-3 py-3 md:px-6 md:py-4 whitespace-nowrap hidden md:table-cell">
                            <span class="text-sm text-gray-900">
                                @(item.Parent?.name ?? "-")
                            </span>
                        </td>
                        <td class="px-3 py-3 md:px-6 md:py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex flex-wrap gap-1 md:gap-2 md:items-center md:space-x-2 md:space-x-reverse">
                                @if (item.HasChild)
                                {
                                    <a href="~/admin/categories/index?ParentId=@item.Id"
                                       class="bg-blue-100 hover:bg-blue-200 text-blue-700 px-2 py-1 md:px-3 md:py-1 rounded-lg text-xs flex items-center transition duration-200">
                                        <i class="fas fa-eye ml-1"></i>
                                        <span class="hidden md:inline">مشاهده زیردسته‌ها</span>
                                        <span class="md:hidden">زیردسته‌ها</span>
                                    </a>
                                }

                                @if (item.Parent == null)
                                {
                                    <a href="~/admin/categories/addnewcategory?ParentId=@item.Id"
                                       class="bg-green-100 hover:bg-green-200 text-green-700 px-2 py-1 md:px-3 md:py-1 rounded-lg text-xs flex items-center transition duration-200">
                                        <i class="fas fa-plus ml-1"></i>
                                        <span class="hidden md:inline">افزودن زیردسته</span>
                                        <span class="md:hidden">زیردسته</span>
                                    </a>
                                }

                                <button onclick="editCategory(@item.Id, '@item.Name')"
                                        class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 px-2 py-1 md:px-3 md:py-1 rounded-lg text-xs flex items-center transition duration-200">
                                    <i class="fas fa-edit ml-1"></i>
                                    <span class="hidden md:inline">ویرایش</span>
                                </button>

                                <button onclick="deleteCategory(@item.Id, '@item.Name')"
                                        class="bg-red-100 hover:bg-red-200 text-red-700 px-2 py-1 md:px-3 md:py-1 rounded-lg text-xs flex items-center transition duration-200">
                                    <i class="fas fa-trash ml-1"></i>
                                    <span class="hidden md:inline">حذف</span>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-8 md:py-12">
                <i class="fas fa-folder-open text-gray-400 text-3xl md:text-4xl mb-3 md:mb-4"></i>
                <p class="text-gray-500 text-sm md:text-base">هیچ دسته‌بندی یافت نشد</p>
                <a href="~/admin/categories/addnewcategory?parentId=@ViewBag.ParentId"
                   class="inline-block mt-3 md:mt-4 bg-green-500 hover:bg-green-600 text-white px-3 py-2 md:px-4 md:py-2 rounded-lg text-sm">
                    افزودن اولین دسته‌بندی
                </a>
            </div>
        }
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-10 md:top-20 mx-auto p-4 md:p-5 border w-11/12 md:w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">ویرایش دسته‌بندی</h3>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">نام دسته‌بندی</label>
                <input type="text" id="editCategoryName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <input type="hidden" id="editCategoryId">
            </div>
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                <button onclick="closeEditModal()" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline order-2 md:order-1">
                    انصراف
                </button>
                <button onclick="updateCategory()" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline order-1 md:order-2">
                    ذخیره تغییرات
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>

    <script>
        function editCategory(id, name) {
            document.getElementById('editCategoryId').value = id;
            document.getElementById('editCategoryName').value = name;
            document.getElementById('editModal').classList.remove('hidden');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
        }

        function updateCategory() {
            var id = document.getElementById('editCategoryId').value;
            var name = document.getElementById('editCategoryName').value;

            if (!name.trim()) {
                Swal.fire('خطا!', 'لطفا نام دسته‌بندی را وارد کنید', 'error');
                return;
            }

            Swal.fire({
                title: 'ویرایش دسته‌بندی',
                text: `آیا از ویرایش دسته‌بندی "${name}" اطمینان دارید؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#f59e0b',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'بله، ویرایش شود',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Categories/EditCategory",
                        data: { Id: id, Name: name },
                        success: function (data) {
                            if (data.isSuccess) {
                                Swal.fire('موفق!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('خطا!', data.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('خطا!', 'خطایی در ارتباط با سرور رخ داد', 'error');
                        }
                    });
                }
            });
        }

        function deleteCategory(id, name) {
            Swal.fire({
                title: 'حذف دسته‌بندی',
                text: `آیا از حذف دسته‌بندی "${name}" اطمینان دارید؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'بله، حذف شود',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "/Admin/Categories/DeleteCategory",
                        data: { id: id },
                        success: function (data) {
                            if (data.isSuccess) {
                                Swal.fire('موفق!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('خطا!', data.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('خطا!', 'خطایی در ارتباط با سرور رخ داد', 'error');
                        }
                    });
                }
            });
        }
    </script>
}

