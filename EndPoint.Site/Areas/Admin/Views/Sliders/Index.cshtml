@using Web_Store.Application.Services.Sliders
@model List<SliderDto>
@{
    ViewData["Title"] = "مدیریت اسلایدرها";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <h4 class="card-title mb-2 mb-md-0">مدیریت اسلایدرها</h4>
                <div class="d-flex align-items-center">
                    <a class="heading-elements-toggle d-md-none"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <a href="~/admin/sliders/add" class="btn btn-success btn-sm">
                            <i class="ft-plus"></i> <span class="d-none d-md-inline">افزودن اسلایدر جدید</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-2">
                            <i class="ft-check"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="ft-alert-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="60">#</th>
                                    <th>تصویر</th>
                                    <th class="min-tablet">لینک</th>
                                    <th class="min-mobile">تاریخ ایجاد</th>
                                    <th width="200">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td>
                                            <img src="~/@item.Src" alt="اسلایدر" class="img-fluid img-thumbnail slider-image" />
                                        </td>
                                        <td class="min-tablet">
                                            @if (!string.IsNullOrEmpty(item.Link))
                                            {
                                                <a href="@item.Link" target="_blank" class="text-info text-truncate d-inline-block" style="max-width: 200px;">
                                                    <i class="ft-external-link"></i> @item.Link
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون لینک</span>
                                            }
                                        </td>
                                        <td class="min-mobile">
                                            <span class="text-muted">@item.InsertTime.ToString("yyyy/MM/dd")</span>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical btn-group-sm d-md-flex flex-md-row" role="group">
                                                <a href="~/admin/sliders/Edit/@item.Id" class="btn btn-warning btn-sm mb-1 mb-md-0 me-md-1">
                                                    <i class="ft-edit"></i> <span class="d-none d-md-inline">ویرایش</span>
                                                </a>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm"
                                                            onclick="return confirm('آیا از حذف این اسلایدر مطمئن هستید؟')">
                                                        <i class="ft-trash"></i> <span class="d-none d-md-inline">حذف</span>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }

                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">
                                            <i class="ft-alert-circle fa-2x mb-2 d-block"></i>
                                            هیچ اسلایدری یافت نشد
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .slider-image {
        max-width: 200px;
        max-height: 100px;
        width: auto;
        height: auto;
    }

    @@media (max-width: 768px) {
        .min-tablet {
            display: none;
        }

        .table-responsive {
            border: 1px solid #dee2e6;
        }

        .table td {
            padding: 0.75rem;
            border-bottom: 1px solid #dee2e6;
        }

        .btn-group-vertical {
            width: 100%;
        }

            .btn-group-vertical .btn {
                width: 100%;
                margin-bottom: 5px;
            }

        .slider-image {
            max-width: 150px;
            max-height: 80px;
        }

        .card-header {
            padding: 1rem;
        }
    }

    @@media (max-width: 576px) {
        .min-mobile {
            display: none;
        }

        .table td, .table th {
            padding: 0.5rem;
            font-size: 0.9rem;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

        .slider-image {
            max-width: 120px;
            max-height: 60px;
        }
    }

    @@media (max-width: 400px) {
        .table td, .table th {
            padding: 0.3rem;
            font-size: 0.8rem;
        }

        .btn {
            padding: 0.2rem 0.4rem;
            font-size: 0.75rem;
        }

        .slider-image {
            max-width: 100px;
            max-height: 50px;
        }
    }

    /* استایل برای نمایش بهتر در موبایل */
    @@media (max-width: 768px) {
        .table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }

        .table tbody td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: none;
            border-bottom: 1px solid #f8f9fa;
            text-align: left;
        }

            .table tbody td:first-child {
                font-weight: bold;
                background-color: #f8f9fa;
            }

            .table tbody td:last-child {
                border-bottom: none;
                justify-content: center;
            }

            .table tbody td:before {
                content: attr(data-label);
                font-weight: bold;
                color: #495057;
                margin-left: 0.5rem;
            }
    }
</style>