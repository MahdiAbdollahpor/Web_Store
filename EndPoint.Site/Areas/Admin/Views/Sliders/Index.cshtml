@using Web_Store.Application.Services.Sliders
@model List<SliderDto>
@{
    ViewData["Title"] = "مدیریت اسلایدرها";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">مدیریت اسلایدرها</h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                     <a href="~/admin/sliders/add" class="btn btn-success btn-sm">
                        <i class="ft-plus"></i> افزودن اسلایدر جدید
                    </a>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-2">
                            <i class="ft-check"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="ft-alert-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>تصویر</th>
                                    <th>لینک</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <img src="~/@item.Src" alt="اسلایدر" style="max-width: 200px; max-height: 100px;" class="img-thumbnail" />
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Link))
                                            {
                                                <a href="@item.Link" target="_blank" class="text-info">
                                                    <i class="ft-external-link"></i> @item.Link
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون لینک</span>
                                            }
                                        </td>
                                        <td>
                                            @item.InsertTime.ToString("yyyy/MM/dd")
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="~/admin/sliders/Edit/@item.Id" class="btn btn-warning btn-sm">
                                                    <i class="ft-edit"></i> ویرایش
                                                </a>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm"
                                                            onclick="return confirm('آیا از حذف این اسلایدر مطمئن هستید؟')">
                                                        <i class="ft-trash"></i> حذف
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }

                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="ft-alert-circle"></i> هیچ اسلایدری یافت نشد
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>